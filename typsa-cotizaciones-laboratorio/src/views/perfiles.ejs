<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('./partials/meta', { titulo: 'Perfiles de An치lisis' }) %>
</head>
<body>
  <%- include('./partials/navbar', { page: '/perfiles', logged }) %>
  <div class="container mt-4">
    <h2 class="mb-3">Perfiles de an치lisis</h2>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-warning">No se pudo cargar algunos datos: <%= error %></div>
    <% } %>

    <div class="mb-3">
      <input type="text" id="searchPerfiles" class="form-control" placeholder="Buscar por ID, nombre o descripcion...">
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripci칩n</th>
            <th># An치lisis</th>
            <th>Precio Base (S/)</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% (perfiles || []).forEach(p => { %>
            <tr>
              <td><%= p.PerfilId %></td>
              <td><%= p.Nombre %></td>
              <td><%= p.Descripcion || '-' %></td>
              <td><%= p.AnalisisCount %></td>
              <td><%= p.PrecioBase != null ? Number(p.PrecioBase).toFixed(2) : '-' %></td>
              <td class="text-nowrap">
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalPrecio"
                  data-id="<%= p.PerfilId %>" data-nombre="<%= p.Nombre %>" data-precio="<%= p.PrecioBase ?? '' %>">
                  Editar precio
                </button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="modal fade" id="modalPrecio" tabindex="-1">
    <div class="modal-dialog">
      <form class="modal-content" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Actualizar precio del perfil</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="PerfilIdHidden">
          <input type="hidden" name="Nombre" id="PerfilNombreHidden">
          <div class="mb-3">
            <label class="form-label">Perfil</label>
            <input type="text" id="PerfilNombre" class="form-control" readonly>
          </div>
          <div class="mb-3">
            <label class="form-label">Precio base (S/)</label>
            <input type="number" step="0.01" name="PrecioBase" id="PerfilPrecio" class="form-control" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button class="btn btn-primary">Guardar</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const modal = document.getElementById('modalPrecio');
    modal.addEventListener('show.bs.modal', evt => {
      const btn = evt.relatedTarget;
      const id = btn.dataset.id;
      const nombre = btn.dataset.nombre || '';
      const precio = btn.dataset.precio || '';
      document.getElementById('PerfilIdHidden').value = id;
      document.getElementById('PerfilNombre').value = nombre;
      document.getElementById('PerfilNombreHidden').value = nombre;
      document.getElementById('PerfilPrecio').value = precio;
      modal.querySelector('form').action = `/perfiles/${id}/precio`;
    });
  </script>

  <script>
    // Busqueda en vivo (insensible a acentos)
    const searchInput = document.getElementById('searchPerfiles');
    const norm = (s) => (s || '').toString().toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');
    searchInput.addEventListener('input', () => {
      const q = norm(searchInput.value);
      document.querySelectorAll('table tbody tr').forEach(tr => {
        const txt = norm(tr.textContent);
        tr.style.display = txt.includes(q) ? '' : 'none';
      });
    });
  </script>

  <%- include('./partials/scripts') %>
  <%- include('./partials/footer') %>
</body>
</html>
